@model PagginatedResponse<TeacherGetDto>

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
             @foreach (var item in Model.Items)
        {
            <div style="width:25%" class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher mb-45">
                    <div class="single-teacher-img">
                        <a href="teacher/detail/@item.Id"><img  src="/assets/img/teacher/@item.Image" alt="teacher"></a>
                    </div>
                    <div class="single-teacher-content text-center">
                        <h2><a asp-controller="teacher" asp-action="detail">@item.FullName</a></h2>
                        <h4>@item.Duty.Name</h4>
                        <ul>
                            @foreach (var social in item.SocialNetworks)
                        {
                            <li> <a href="@social.Url">@Html.Raw(social.Icon)</a></li>
                        }
                          
                        </ul>
                    </div>
                </div>
            </div>
            
        }
   
        </div>
    </div>
</div>
<!-- Teacher End -->