@model PagginatedResponse<BlogGetDto>
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @foreach (var item in Model.Items)
                    {
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-blog mb-60">
                            <div class="blog-img">
                                <a href="~/assets/#"><img src="~/assets/img/blog/@item.Image" alt="blog"></a>
                                <div class="blog-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="blog-top">
                                        <p>By @item.AuthorGetDto.Name  / @item.Date.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i>@item.CommentCount</p>
                                </div>
                                <div class="blog-bottom">
                                        <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title </a></h2>
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                        
                    }
                 
                    <div class="col-md-12">
                        <div class="pagination">
                            <ul>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li><a asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                               
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form asp-controller="blog" asp-action="index" id="search">
                                <input name="searchText" type="search" placeholder="Search..."  />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in ViewBag.Categories.Items)
                            {
                            <li><a href="~/assets/#">@item.Name (@item.BlogCount)</a></li>
                            }
                        
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="~/assets/blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>

                        @foreach (var item in Model.Items.OrderByDescending(p=>p.Date).Take(3))
                        {
                            
                        <div style="display:flex" class="single-post mb-30">
                                <div style="width:50%" class="single-post-img">
                                <a href="~/assets/blog-details.html">
                                    <img  src="~/assets/img/blog/@item.Image" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                    <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h4>
                                    <p>By @item.AuthorGetDto.Name  /  @item.Date.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        }
                      
                       
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (var item in ViewBag.Tags.Items)
                            {
                            <a href="~/assets/blog-details.html" class="mr-10 mb-10">@item.Name</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->