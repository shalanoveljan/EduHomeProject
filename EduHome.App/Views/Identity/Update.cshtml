
@model UpdateDto

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>update</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Update</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="col-md-12 form-group">
                                    <input asp-for="Name" class="form-control" placeholder="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'FullName'">
                                    <span class="alert alert-text" asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input asp-for="Surname" class="form-control" placeholder=" SurName" onfocus="this.placeholder = ''" onblur="this.placeholder = 'FullName'">
                                    <span class="alert alert-text" asp-validation-for="Surname"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input asp-for="UserName" class="form-control" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
                                    <span class="alert alert-text" asp-validation-for="UserName"></span>
                                </div>

                                <div class="col-md-12 form-group">
                                    <input asp-for="OldPassword" class="form-control" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
                                    <span class="alert alert-text" asp-validation-for="OldPassword"></span>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input asp-for="NewPassword" class="form-control" placeholder="NewPassword" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ConfirmPassword'">
                                    <span class="alert alert-text" asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="button-box">
                                    <button type="submit" class="default-btn">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->