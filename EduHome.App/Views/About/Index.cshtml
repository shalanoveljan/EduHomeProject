    {
        @videoLink
    }
    }">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @await Html.PartialAsync("_NoticeBoardPartialView",Model.boards)
                    </div>
                </div>
            </div>
        </div>
