@model EventGetDto

@inject IEventService eventService

@{
    PagginatedResponse<EventGetDto> events = await eventService.GetAllAsync();
}
  

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div  class="event-details">
                    <div class="event-details-img">
                        <img style="width:100%" src="~/assets/img/event/@Model.Image" alt="event-details">
                        <div class="event-date">   
                            <h3>@Model.EndDate.ToString("dd MMM")</h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.Title</h2>
                        <ul>
                            <li><span>time : </span>@Model.JobTime</li>
                            <li><span>venue : </span>Cristal Centre, 254 New Yourk</li>
                        </ul>
                       
                        <p>@Model.Description</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (var item in Model.Speakers)
                            {
                            <div class="single-speaker">
                                <div class="speaker-img">
                                    <img style="height:100px" src="~/assets/img/event/@item.Image " alt="speaker">
                                </div>
                                <div class="speaker-name">
                                    <h5>@item.FullName</h5>
                                    <p>@item.Position.Name </p>
                                </div>
                            </div>
                                
                            }
                          
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right text-left">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in ViewBag.Categories.Items)
                            {
                                <li><a href="~/assets/#">@item.Name (@item.EventCount)</a></li>

                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="~/assets/blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var item in events.Items.OrderByDescending(p => p.CreatedAt).Take(3))
                        {

                            <div class="single-post mb-30">
                                <div style="width:50%" class="single-post-img">
                                    <a href="~/assets/blog-details.html">
                                        <img src="~/assets/img/event/@item.Image" alt="post">
                                        <div class="blog-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="single-post-content">
                                    <h4><a href="~/assets/blog-details.html">@item.Title</a></h4>

                                    <p>

                                        @foreach (var speaker in item.Speakers)
                                        {
                                            <span>By @speaker.FullName</span>
                                        }
                                        /   @item.EndDate.ToString("MMMM dd, yyyy")

                                    </p>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (var item in ViewBag.Tags.Items)
                            {
                                <a href="~/assets/blog-details.html" class="mr-10 mb-10">@item.Name</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->