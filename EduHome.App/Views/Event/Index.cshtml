@model PagginatedResponse<EventGetDto>

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / right side bar</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-area event-area three text-center pt-150 pb-90">
    <div class="container">
        <div class="row">   
            <div class="col-md-8">
                <div class="row">

                    @foreach (var item in Model.Items)
                    {
                        
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-event mb-60">
                            <div class="event-img">
                                <a href="~/assets/event-details.html">
                                    <img src="~/assets/img/event/@item.Image" alt="event">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event-date">
                                        <h3>@item.EndDate.ToString("dd MMM")</h3>

                                </div>
                            </div>
                            <div class="event-content text-left">
                                <h4><a href="~/assets/event-details.html">ADVANCE PHP WORKSHOP</a></h4>
                                <ul>
                                    <li><span>time:</span>@item.JobTime</li>
                                    <li><span>venue</span> New York</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
       
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right text-left">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in ViewBag.Categories.Items)
                            {
                                <li><a href="~/assets/#">@item.Name (@item.EventCount)</a></li>

                            }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="~/assets/blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var item in Model.Items.OrderByDescending(p => p.CreatedAt).Take(3))
                        {
                            
                        <div style="display:flex" class="single-post mb-30">
                            <div class="single-post-img">
                                <a asp-controller="Event" asp-action="index" asp-route-id="@item.Id">
                                    <img src="~/assets/img/event/@item.Image" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a href="~/assets/blog-details.html">@item.Title</a></h4>
                               
                                <p>

                                        @foreach (var speaker in item.Speakers)
                                        {
                                            <span>By @speaker.FullName</span>
                                        }
                                        /   @item.EndDate.ToString("MMMM dd, yyyy")
                                    
                                </p>
                            </div>
                        </div>
                        }
                      
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (var item in ViewBag.Tags.Items)
                            {
                            <a href="~/assets/blog-details.html" class="mr-10 mb-10">@item.Name</a>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->