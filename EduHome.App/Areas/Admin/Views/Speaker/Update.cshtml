@model SpeakerGetDto

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form method="post" enctype="multipart/form-data" class="forms-sample">
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="FullName"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Name">
                            <span class="text text-danger" asp-validation-for="FullName"></span>
                        </div>

                        <div class="form-group">
                            <input accept="image/*" type="file" name="ImageFile" class="form-control" placeholder="Image">
                            <br>
                            <img  src="~/assets/img/event/@Model.Image" />
                        </div>

                        <div class="form-group">
                            <select name="PositionId" class="form-select" aria-label="Default select example">
                                <option selected>Positions</option>
                                @foreach (var item in ViewBag.Positions.Items)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
