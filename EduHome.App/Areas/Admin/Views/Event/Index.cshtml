@model PagginatedResponse<EventGetDto>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <a class="btn btn-success" asp-action="create">
                            Add New Event
                        </a>
                    </h4>
                    <p class="card-description">
                        Add class <code>.table</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Speakers</th>
                                    <th>Tags</th>
                                    <th>Category</th>
                                    <th>Operations</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (EventGetDto item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img src="~/assets/img/event/@item.Image" /></td>
                                        <td>@item.Title</td>
                                        <td>
                                            @foreach (var speaker in item.Speakers)
                                            {
                                                var SpeakerName = (string)speaker.GetType().GetProperty("FullName").GetValue(speaker);
                                                <span>@SpeakerName </span>
                                            }

                                        </td>
                                        <td>
                                            @foreach (var tag in item.TagsOfEvent)
                                            {
                                                var tagName = (string)tag.GetType().GetProperty("Name").GetValue(tag);
                                                <span>@tagName </span>
                                            }

                                        </td>
                                        <td>@item.Category.Name</td>
                                        <td><a onclick="return confirm('are you sure?')" asp-action="remove" asp-route-id="@item.Id" class="badge badge-danger">Remove</a> <a asp-action="update" asp-route-id="@item.Id" class="badge badge-warning">Update</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>


                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" tabindex="-1">Previous</a>
                                    </li>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : null)">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.TotalPages == Model.CurrentPage ? "disabled" : null)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>